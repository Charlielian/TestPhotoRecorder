<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChartActivity">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/primary"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:layout_weight="0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="信号强度分析"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontWeight="700"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_export_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出图表"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:layout_weight="0"/>
    </LinearLayout>

    <!-- 图表标题 -->
    <TextView
        android:id="@+id/tv_chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:text="接收电平 (RSSI)变化趋势"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontWeight="700"
        android:padding="16dp"
        android:gravity="center"/>

    <!-- 参数选择 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_chart_title"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/light_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参数选择:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"/>

        <Spinner
            android:id="@+id/param_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/chart_params"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- 折线图 -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/param_spinner"
        android:layout_margin="16dp"
        android:minHeight="400dp"/>

</RelativeLayout>